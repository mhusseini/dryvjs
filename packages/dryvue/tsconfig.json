{
  "include": ["env.d.ts", "src/**/*"],
  "exclude": ["src/**/__tests__/*"],
  
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "outDir": "dist",
    "target": "ES2015",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "stripInternal": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "isolatedModules": true
  }
}
